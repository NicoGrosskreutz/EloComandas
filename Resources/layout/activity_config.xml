<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        
        android:id="@+id/scrollView"
        android:layout_alignParentRight="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true" >
        

        <RelativeLayout
            android:minWidth="25px"
			android:minHeight="25px"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_alignParentRight="true"
			android:layout_alignParentLeft="true"
			android:layout_alignParentBottom="true"
			android:id="@+id/relativeLayoutScroll">

            <TextView
                android:text="Configurações"
                android:textSize="20sp"
                android:textColor="#393939"
                android:layout_centerHorizontal="true"
				android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/header"
                tools:ignore="HardcodedText" />

            <ImageButton
                android:id="@+id/btnReturn"
                android:contentDescription="return"
                android:background="@mipmap/leftarrow"
                android:layout_margin="5dp"
                android:layout_width="40dp"
                android:layout_height="40dp"/>
            <TextView
                android:text="DNS Interno:"
                android:textSize="13sp"
                android:textColor="#000"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/header"
                android:minWidth="25px"
                android:minHeight="25px"
                android:id="@+id/label1"
                tools:ignore="HardcodedText" />

            <EditText
                android:textSize="15sp"
                android:imeOptions="actionGo"
                android:layout_marginLeft="90dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="-33dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/label1"
                android:layout_toRightOf="@id/label1"
                android:maxLines="1"
                android:id="@+id/txDNSInterno"
                android:layout_alignParentRight="true"
                android:layout_alignParentLeft="true"
                tools:ignore="MissingInputType,HardcodedSize,NegativeMargin" />
            <TextView
                android:text="DNS Externo:"
                android:textSize="13sp"
                android:layout_marginTop="15dp"
                android:textColor="#000"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txDNSInterno"
                android:id="@+id/label2"
                tools:ignore="HardcodedText" />
            <EditText
                android:textSize="15sp"
                android:layout_marginLeft="95dp"
                android:inputType="text"
                android:imeOptions="actionNext"
                android:layout_marginRight="10dp"
                android:layout_marginTop="-33dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:layout_below="@id/label2"
                android:id="@+id/txDNSExterno"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                tools:ignore="NegativeMargin" />
            <TextView
                android:text="Interno/Externo:"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="10dp"
                android:textColor="#212121"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txDNSExterno"
                android:id="@+id/label3"
                tools:ignore="HardcodedText" />
            <android.support.v7.widget.SwitchCompat
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/label3"
                android:layout_below="@id/txDNSExterno"
                android:id="@+id/swDNS" />
            <Button
                android:text="Salvar"
                android:layout_marginTop="15dp"
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/swDNS"
                android:id="@+id/btnSalvar"
                android:layout_alignParentRight="true"
                tools:ignore="HardcodedText" />
            <LinearLayout
                android:orientation="horizontal"
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_marginTop="20dp"
                android:layout_width="100.0dp"
                android:layout_height="47.5dp"
                android:layout_below="@id/btnSalvar"
                android:id="@+id/linearLayout"
                android:layout_alignParentRight="true" />
            <RelativeLayout
                android:background="#E9E9E9"
                android:padding="10dp"
                android:visibility="visible"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/linearLayout"
                android:id="@+id/relativeLayout">
                    <Button
                        android:text="Fechar"
                        android:width="180dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/btnFechar"
                        tools:ignore="HardcodedText" />
                    <Button
                        android:text="Logout"
                        android:width="180dp"
                        android:layout_marginLeft="185dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/btnlogout"/>                        
            </RelativeLayout>
            <Button
                android:text="Conexão Servidor"
                android:textSize="11sp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/swDNS"
                android:id="@+id/btnTest"
                tools:ignore="HardcodedText" />
            <TextView
                android:text="lbTest"
                android:textSize="15sp"
                android:layout_marginLeft="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/btnTest"
                android:id="@+id/lbTest"
                tools:ignore="HardcodedText" />
            <LinearLayout
                android:orientation="horizontal"
                android:minWidth="150px"
                android:minHeight="25px"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/lbTest"
                android:id="@+id/btnRLRSLDO"
                android:layout_above="@id/relativeLayout" />
        </RelativeLayout>

    </ScrollView>

</RelativeLayout>