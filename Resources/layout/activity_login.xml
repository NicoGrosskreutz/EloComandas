<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:minWidth="25px"
	android:minHeight="25px">

	<TextView
		android:text="DNS Interno:"
		android:textSize="14sp"
		android:textStyle="bold"
		android:textColor="#000"
		android:layout_marginLeft="23dp"
		android:layout_marginTop="10dp"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:id="@+id/label1" />
	<EditText
		android:lines="1"
		android:textSize="16sp"
		android:layout_width="wrap_content"
		android:imeOptions="actionNext"
		android:layout_height="40dp"
		android:layout_marginLeft="20dp"
		android:layout_marginRight="20dp"
		android:layout_below="@id/label1"
		android:id="@+id/txDNSInterno"
		android:layout_alignParentRight="true"
		android:layout_alignParentLeft="true" />
	<TextView
		android:text="DNS Externo:"
		android:textSize="14sp"
		android:textColor="#000"
		android:layout_marginTop="10dp"
		android:textStyle="bold"
		android:layout_marginLeft="23dp"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@id/txDNSInterno"
		android:id="@+id/label2" />
	<EditText
		android:lines="1"
		android:textSize="15sp"
		android:layout_width="wrap_content"
		android:imeOptions="actionNext"
		android:layout_height="40dp"
		android:layout_marginLeft="20dp"
		android:layout_marginRight="20dp"
		android:layout_below="@id/label2"
		android:id="@+id/txDNSExterno"
		android:layout_alignParentRight="true"
		android:layout_alignParentLeft="true" />
	<TextView
		android:textSize="14sp"
		android:textColor="#000"
		android:textStyle="bold"
		android:layout_marginLeft="23dp"
		android:layout_marginTop="13dp"
		android:text="DNS: (Interno / Externo):"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@id/txDNSExterno"
		android:id="@+id/label3" />
	<android.support.v7.widget.SwitchCompat
		android:layout_marginLeft="15dp"
		android:layout_marginTop="10dp"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@id/txDNSExterno"
		android:layout_toRightOf="@id/label3"
		android:id="@+id/swDNS" />
	<TextView
		android:text="Empresa:"
		android:textSize="14sp"
		android:textColor="#000"
		android:textStyle="bold"
		android:layout_marginTop="10dp"
		android:layout_marginLeft="23dp"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@id/swDNS"
		android:id="@+id/label4" />
	<EditText
		android:lines="1"
		android:textSize="15sp"
		android:inputType="textCapCharacters"
		android:imeOptions="actionNext"
		android:layout_marginLeft="20dp"
		android:layout_marginRight="20dp"
		android:layout_width="wrap_content"
		android:layout_height="40dp"
		android:layout_below="@id/label4"
		android:id="@+id/txEmpresa"
		android:layout_alignParentRight="true"
		android:layout_alignParentLeft="true" />
	<TextView
		android:text="Operador:"
		android:layout_marginLeft="23dp"
		android:layout_marginTop="10dp"
		android:textSize="14sp"
		android:textColor="#000"
		android:textStyle="bold"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@id/txEmpresa"
		android:id="@+id/label5" />
	<EditText
		android:lines="1"
		android:textSize="15sp"
		android:inputType="textCapCharacters"
		android:imeOptions="actionDone"
		android:layout_marginLeft="20dp"
		android:layout_marginRight="20dp"
		android:layout_width="wrap_content"
		android:layout_height="40dp"
		android:layout_below="@id/label5"
		android:id="@+id/txOperador"
		android:layout_alignParentLeft="true"
		android:layout_alignParentRight="true" />
	<LinearLayout
		android:gravity="center"
		android:layout_marginTop="10dp"
		android:orientation="horizontal"
		android:minWidth="25px"
		android:minHeight="25px"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@id/txOperador"
		android:id="@+id/linearLayout"
		android:layout_alignParentRight="true"
		android:layout_alignParentLeft="true">
		<Button
			android:text="Entrar"
			android:layout_width="100dp"
			android:layout_height="45dp"
			android:id="@+id/btnEntrar" />
		<Button
			android:text="Cancelar"
			android:layout_width="100dp"
			android:layout_height="45dp"
			android:id="@+id/btnCancelar" />
	</LinearLayout>
	
</RelativeLayout>
